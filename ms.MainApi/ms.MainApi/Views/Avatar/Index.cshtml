        <div class="col-md-3">
            <label>productId</label>
        </div>
        <div class="col-md-9">
            @Html.TextBox("productId")
        </div>
    </div>
    
    <div class="row" style="padding-top:20px;">
        <div class="col-md-3">
            <label>avatar</label>
        </div>
        <div class="col-md-9">
            <input type="file" name="avatar" accept=".jpg" /><br>
        </div>
    </div>
    

    <div class="text-center" style="padding-top:20px;">
